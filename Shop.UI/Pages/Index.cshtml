@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="product">
    
</div>

<div>
<div class="columns is-multiline is-mobile">
    @{
        for (int i = 0; i < 5; i++)
        {
            foreach (var p in Model.Products)
            {
                <div class="column is-4-desktop is-4-tablet is-6-mobile ">
                    <a asp-page="Product" asp-route-name="@p.Name.Replace(" ", "-")">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-4by3">
                                    <img src="~/images/HostGator.png" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="card-content">
                                <p class="title is-4">
                                    @p.Name
                                </p>
                                <p class="subtitle">
                                    @p.Description
                                </p>
                                <p class="subtitle">
                                    <span class="has-text-weight-bold">Price: </span>@p.Value
                                </p>
                                <div class="content">

                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    }
</div>
</div>
